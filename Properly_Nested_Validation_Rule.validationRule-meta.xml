<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Properly_Nested_Validation_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT($Profile.Name = &apos;System Administrator&apos; || $Profile.Name = &apos;Widget Masters&apos;),
    NOT(Is_Properly_Nested__c)
)</errorConditionFormula>
    <errorMessage>Only System Administrators and Widget Masters can save Widgets that are not properly nested</errorMessage>
</ValidationRule>
